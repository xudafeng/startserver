'use strict';

var util = require('xutil');
var ipv4 = require('ipv4');
var color = require('colorx');
var StartServer = require('../');
var exec = require('child_process').exec;
var spawn = require('child_process').spawn;
var statics = require('../lib/middleware/static');
var directory = require('../lib/middleware/directory');
var markdown = require('../lib/middleware/markdown');
var logger = require('../lib/middleware/logger');
var platform = process.platform;
var port = process.argv[2] || 8080;

var server = new StartServer();

server.bundle(logger);
server.bundle(markdown);
server.bundle(statics);
server.bundle(directory);

server.listen(port, ipv4, function(){
  var url = 'http://' + ipv4 + ':' + port;
  if(platform === 'win32'){
    exec('start ' + url);
  }else if(platform === 'linux'){
    //todo cmd = 'type -P gnome-open &>/dev/null  && gnome-open ';
  }else{
    exec('open ' + url);
  }
  url = 'http://' + ipv4.yellow + ':' + port.blue;
  console.log('Running at '.red + url);
});
